# Workiz PR Agent Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Core API Keys
# =============================================================================

# Anthropic (Claude) - Primary LLM
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI - For embeddings and fallback
OPENAI_API_KEY=sk-...

# =============================================================================
# REQUIRED: GitHub Configuration
# =============================================================================

# GitHub App credentials (for webhook-based deployment)
GITHUB_APP_ID=123456
GITHUB_APP_PRIVATE_KEY_BASE64=...  # base64 encoded private key
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# GitHub Personal Access Token (for API calls and user context)
GITHUB_USER_TOKEN=ghp_...

# =============================================================================
# REQUIRED: Database Configuration
# =============================================================================

# PostgreSQL with pgvector
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pr_agent

# =============================================================================
# OPTIONAL: Jira Integration
# =============================================================================

JIRA_BASE_URL=https://workiz.atlassian.net
JIRA_API_TOKEN=...
JIRA_EMAIL=your-email@workiz.com

# =============================================================================
# OPTIONAL: Figma Integration
# =============================================================================

FIGMA_ACCESS_TOKEN=...

# =============================================================================
# OPTIONAL: Additional LLM Providers
# =============================================================================

# Google (Gemini) - For auto-fix agent
GOOGLE_API_KEY=...

# =============================================================================
# Application Configuration
# =============================================================================

# Environment: development, staging, production
ENV=development

# Server port
PORT=8000

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# Workiz-Specific Configuration
# =============================================================================

# Organization name
WORKIZ_ORG=Workiz

# Main branches (comma-separated)
WORKIZ_MAIN_BRANCHES=workiz.com,main,master

# Enable features
WORKIZ_ENABLE_JIRA=false
WORKIZ_ENABLE_FIGMA=false
WORKIZ_ENABLE_AUTOFIX=false

